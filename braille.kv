#:kivy 1.0.9

<FingerTracker>:    
    canvas:
        Color:
            rgb: 1, 1, 1
        # Rectangle:
        #     source: 'data/images/background.jpg'
        #     size: self.size

    BoxLayout:
        padding: '10dp'
        spacing: '10dp'
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: '44dp'

        Label:
            height: '24dp'
            text_size: self.width, None
            color: (1, 1, 1, .8)
            text: 'Braille Finger Tracker'
            valign: 'middle'